{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Portfolio": {
    "BaseCurrency": "GBP",
    "DefaultDateRangeDays": 730,
    "MaxDateRangeDays": 3650
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },
  "Jwt": {
    "SecretKey": "your-secret-key-change-this-in-production-min-32-characters-long",
    "Issuer": "TimeWeightedReturnAPI",
    "Audience": "TimeWeightedReturnClient",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Identity": {
    "RequireDigit": true,
    "RequiredLength": 8,
    "RequireNonAlphanumeric": true,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "MaxFailedAccessAttempts": 5,
    "LockoutMinutes": 15
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      }
    ],
    "EndpointWhitelist": [
      "get:/api/health"
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "127.0.0.1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 1000
          }
        ]
      }
    ]
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@portfolioanalytics.com",
    "FromName": "Portfolio Analytics",
    "FrontendUrl": "http://localhost:5173",
    "EnableEmailSending": false
  }
}
