# Docker Environment Configuration
# Copy this file to .env and customize for your environment

# API Configuration
ASPNETCORE_ENVIRONMENT=Docker
API_PORT=8080

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8080/api

# Database Configuration (SQLite)
DB_PATH=/app/data/PerformanceCalculationDb.db

# JWT Configuration
JWT_SECRET_KEY=docker-dev-secret-key-change-in-production-min-32-chars
JWT_ISSUER=TimeWeightedReturnAPI
JWT_AUDIENCE=TimeWeightedReturnClient
JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# Admin Seed Configuration
ADMIN_SEED_EMAIL=admin@portfolioanalytics.com
ADMIN_SEED_PASSWORD=Admin123!@#
ADMIN_SEED_FIRST_NAME=System
ADMIN_SEED_LAST_NAME=Administrator

# Redis Configuration
REDIS_PORT=6379

# Email Configuration (optional - disabled by default)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_ENABLE_SSL=true
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM_EMAIL=noreply@portfolioanalytics.com
EMAIL_FROM_NAME=Portfolio Analytics
EMAIL_ENABLE_SENDING=false

# Market Data Configuration
MARKET_DATA_ENABLE_AUTO_UPDATE=true
MARKET_DATA_SCHEDULE_CRON=0 2 * * *
MARKET_DATA_DEFAULT_PROVIDER=AlphaVantage
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
FINNHUB_API_KEY=your-finnhub-api-key-here
