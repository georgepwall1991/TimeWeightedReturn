{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=portfolioanalytics;Username=portfoliouser;Password=portfoliopass;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Portfolio": {
    "BaseCurrency": "GBP",
    "DefaultDateRangeDays": 730,
    "MaxDateRangeDays": 3650
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost:5174"
    ]
  },
  "Jwt": {
    "SecretKey": "your-secret-key-change-this-in-production-min-32-characters-long",
    "Issuer": "TimeWeightedReturnAPI",
    "Audience": "TimeWeightedReturnClient",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Identity": {
    "RequireDigit": true,
    "RequiredLength": 8,
    "RequireNonAlphanumeric": true,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "MaxFailedAccessAttempts": 5,
    "LockoutMinutes": 15
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      }
    ],
    "EndpointWhitelist": [
      "get:/api/health"
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "127.0.0.1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 1000
          }
        ]
      }
    ]
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@portfolioanalytics.com",
    "FromName": "Portfolio Analytics",
    "FrontendUrl": "http://localhost:5173",
    "EnableEmailSending": false
  },
  "AdminSeed": {
    "EnableSeeding": true,
    "Email": "admin@portfolioanalytics.com",
    "Password": "Admin123!@#",
    "FirstName": "System",
    "LastName": "Administrator"
  },
  "MarketData": {
    "EnableAutoUpdate": true,
    "ScheduleCron": "0 2 * * *",
    "DefaultProvider": "AlphaVantage",
    "FallbackProviders": [ "Finnhub", "YahooFinance" ],
    "CacheDurationMinutes": 60,
    "MaxRetries": 3,
    "RetryDelaySeconds": 5,
    "AlphaVantage": {
      "ApiKey": "",
      "BaseUrl": "https://www.alphavantage.co/query",
      "RateLimitPerMinute": 5,
      "RateLimitPerDay": 25
    },
    "Finnhub": {
      "ApiKey": "",
      "BaseUrl": "https://finnhub.io/api/v1",
      "RateLimitPerMinute": 60
    },
    "YahooFinance": {
      "BaseUrl": "https://query1.finance.yahoo.com/v7/finance",
      "RateLimitPerMinute": 2000
    }
  }
}
